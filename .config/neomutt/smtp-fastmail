# smtp sending
set my_smtp_server=mail.messagingengine.com
set my_sender=`pass user/fastmail-sender`
set my_user=`pass user/fastmail`
set my_pass=`pass mail/fastmail-app`

#set smtp_pass=$my_pass
set smtp_url="smtps://$my_user:$my_pass@$my_smtp_server:465/"
set certificate_file="/etc/ssl/certs/ca-certificates.crt"

set sendmail_wait = 0
set record = "+fastmail/Sent"
set from=$my_sender
set realname = "Ryan Roden-Corrent"
